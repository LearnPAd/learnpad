# baseURI: http://learnpad.eu/kpir
# imports: http://learnpad.eu
# imports: http://spinrdf.org/spl

@prefix : <http://learnpad.eu/kpir#> .
@prefix D54_Design: <http://learnpad.eu/D54_Design#> .
@prefix afn: <http://jena.hpl.hp.com/ARQ/function#> .
@prefix arg: <http://spinrdf.org/arg#> .
@prefix fn: <http://www.w3.org/2005/xpath-functions#> .
@prefix kpi_models_testdata: <http://learnpad.eu/kpi_models_testdata#> .
@prefix nco: <http://ikm-group.ch/archiMEO/nco#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix smf: <http://topbraid.org/sparqlmotionfunctions#> .
@prefix sp: <http://spinrdf.org/sp#> .
@prefix spif: <http://spinrdf.org/spif#> .
@prefix spin: <http://spinrdf.org/spin#> .
@prefix spl: <http://spinrdf.org/spl#> .
@prefix transfer: <http://learnpad.eu/transfer#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix xwiki: <http://www.xwiki.org/xwiki/bin/view/Main/WebHome#> .

<http://ikm-group.ch/archiMEO/kpi#KPI>
  spin:rule [
      rdf:type sp:Construct ;
      sp:templates (
          [
            sp:object <http://learnpad.eu/transfer#obj.36000> ;
            sp:predicate rdf:type ;
            sp:subject [
                sp:varName "valueInstance"^^xsd:string ;
              ] ;
          ]
          [
            sp:object <http://learnpad.eu#PerformanceValue> ;
            sp:predicate rdf:type ;
            sp:subject [
                sp:varName "valueInstance"^^xsd:string ;
              ] ;
          ]
          [
            sp:object [
                sp:varName "totalCount"^^xsd:string ;
              ] ;
            sp:predicate <http://learnpad.eu#performanceValueHasActualValue> ;
            sp:subject [
                sp:varName "valueInstance"^^xsd:string ;
              ] ;
          ]
          [
            sp:object [
                sp:varName "person"^^xsd:string ;
              ] ;
            sp:predicate <http://learnpad.eu#performanceValueBelongsToPerson> ;
            sp:subject [
                sp:varName "valueInstance"^^xsd:string ;
              ] ;
          ]
        ) ;
      sp:where (
          [
            rdf:type sp:SubQuery ;
            sp:query [
                rdf:type sp:Select ;
                sp:groupBy (
                    [
                      sp:varName "person"^^xsd:string ;
                    ]
                  ) ;
                sp:resultVariables (
                    [
                      sp:varName "person"^^xsd:string ;
                    ]
                    [
                      sp:expression [
                          rdf:type sp:Count ;
                          sp:expression [
                              sp:varName "actionHistory"^^xsd:string ;
                            ] ;
                        ] ;
                      sp:varName "totalCount"^^xsd:string ;
                    ]
                  ) ;
                sp:where (
                    [
                      sp:object xwiki:ActionHistory ;
                      sp:predicate rdf:type ;
                      sp:subject [
                          sp:varName "actionHistory"^^xsd:string ;
                        ] ;
                    ]
                    [
                      sp:object [
                          sp:varName "person"^^xsd:string ;
                        ] ;
                      sp:predicate xwiki:user ;
                      sp:subject [
                          sp:varName "actionHistory"^^xsd:string ;
                        ] ;
                    ]
                  ) ;
              ] ;
          ]
          [
            rdf:type sp:Bind ;
            sp:expression [
                rdf:type sp:iri ;
                sp:arg1 [
                    rdf:type fn:concat ;
                    sp:arg1 "http://learnpad.eu/exec#obj.36000_" ;
                    sp:arg2 [
                        rdf:type afn:localname ;
                        sp:arg1 [
                            sp:varName "person"^^xsd:string ;
                          ] ;
                      ] ;
                    sp:arg3 "_value" ;
                  ] ;
              ] ;
            sp:variable [
                sp:varName "valueInstance"^^xsd:string ;
              ] ;
          ]
        ) ;
      rdfs:comment "2 Rule: \"global actions per user on platform\""^^xsd:string ;
    ] ;
  spin:rule [
      rdf:type sp:Construct ;
      sp:templates (
          [
            sp:object [
                sp:varName "score"^^xsd:string ;
              ] ;
            sp:predicate <http://learnpad.eu#performanceValueHasScore> ;
            sp:subject [
                sp:varName "kpiValue"^^xsd:string ;
              ] ;
          ]
        ) ;
      sp:where (
          [
            rdf:type sp:SubQuery ;
            sp:query [
                rdf:type sp:Select ;
                sp:resultVariables (
                    [
                      sp:varName "kpiValue"^^xsd:string ;
                    ]
                    [
                      sp:varName "actualValue"^^xsd:string ;
                    ]
                    [
                      sp:varName "score"^^xsd:string ;
                    ]
                  ) ;
                sp:where (
                    [
                      rdf:type sp:TriplePath ;
                      sp:object spin:_this ;
                      sp:path [
                          rdf:type sp:ModPath ;
                          sp:modMax -2 ;
                          sp:modMin 0 ;
                          sp:subPath rdfs:subClassOf ;
                        ] ;
                      sp:subject [
                          sp:varName "kpi"^^xsd:string ;
                        ] ;
                    ]
                    [
                      sp:object [
                          sp:varName "kpi"^^xsd:string ;
                        ] ;
                      sp:predicate rdf:type ;
                      sp:subject [
                          sp:varName "kpiValue"^^xsd:string ;
                        ] ;
                    ]
                    [
                      sp:object [
                          sp:varName "actualValue"^^xsd:string ;
                        ] ;
                      sp:predicate <http://learnpad.eu#performanceValueHasActualValue> ;
                      sp:subject [
                          sp:varName "kpiValue"^^xsd:string ;
                        ] ;
                    ]
                    [
                      sp:object [
                          sp:varName "greenYellowThreshold"^^xsd:string ;
                        ] ;
                      sp:predicate <http://ikm-group.ch/archiMEO/kpi#kpiHasGreenYellowThreshold> ;
                      sp:subject [
                          sp:varName "kpi"^^xsd:string ;
                        ] ;
                    ]
                    [
                      sp:object [
                          sp:varName "yellowRedThreshold"^^xsd:string ;
                        ] ;
                      sp:predicate <http://ikm-group.ch/archiMEO/kpi#kpiHasYellowRedThreshold> ;
                      sp:subject [
                          sp:varName "kpi"^^xsd:string ;
                        ] ;
                    ]
                    [
                      sp:object [
                          sp:varName "greaterIsBetter"^^xsd:string ;
                        ] ;
                      sp:predicate <http://ikm-group.ch/archiMEO/kpi#kpiHasThresholdTypeGreaterIsBetter> ;
                      sp:subject [
                          sp:varName "kpi"^^xsd:string ;
                        ] ;
                    ]
                    [
                      rdf:type sp:Bind ;
                      sp:expression [
                          rdf:type sp:if ;
                          sp:arg1 [
                              sp:varName "greaterIsBetter"^^xsd:string ;
                            ] ;
                          sp:arg2 [
                              rdf:type sp:if ;
                              sp:arg1 [
                                  rdf:type sp:ge ;
                                  sp:arg1 [
                                      sp:varName "actualValue"^^xsd:string ;
                                    ] ;
                                  sp:arg2 [
                                      sp:varName "greenYellowThreshold"^^xsd:string ;
                                    ] ;
                                ] ;
                              sp:arg2 3 ;
                              sp:arg3 [
                                  rdf:type sp:if ;
                                  sp:arg1 [
                                      rdf:type sp:ge ;
                                      sp:arg1 [
                                          sp:varName "actualValue"^^xsd:string ;
                                        ] ;
                                      sp:arg2 [
                                          sp:varName "yellowRedThreshold"^^xsd:string ;
                                        ] ;
                                    ] ;
                                  sp:arg2 2 ;
                                  sp:arg3 1 ;
                                ] ;
                            ] ;
                          sp:arg3 [
                              rdf:type sp:if ;
                              sp:arg1 [
                                  rdf:type sp:le ;
                                  sp:arg1 [
                                      sp:varName "actualValue"^^xsd:string ;
                                    ] ;
                                  sp:arg2 [
                                      sp:varName "greenYellowThreshold"^^xsd:string ;
                                    ] ;
                                ] ;
                              sp:arg2 3 ;
                              sp:arg3 [
                                  rdf:type sp:if ;
                                  sp:arg1 [
                                      rdf:type sp:le ;
                                      sp:arg1 [
                                          sp:varName "actualValue"^^xsd:string ;
                                        ] ;
                                      sp:arg2 [
                                          sp:varName "yellowRedThreshold"^^xsd:string ;
                                        ] ;
                                    ] ;
                                  sp:arg2 2 ;
                                  sp:arg3 1 ;
                                ] ;
                            ] ;
                        ] ;
                      sp:variable [
                          sp:varName "score"^^xsd:string ;
                        ] ;
                    ]
                  ) ;
              ] ;
          ]
        ) ;
      rdfs:comment "3 Calculate score of all KPI's"^^xsd:string ;
    ] ;
.
